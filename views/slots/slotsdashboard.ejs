<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>PARKING SLOT INFORMATION</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/eb33f99750.js" crossorigin="anonymous"></script>
    <!-- Our Custom CSS -->
    <link rel="stylesheet" href="css/navbar.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <%- include("../partials/navbar") -%>
        <div class="container-fluid">
            <table class="table table-bordered" style="color: white;">
                <tbody>
                <h1 style="margin-left: 20%;">Parking Slots</h1>
                <tr>
                <% count=0
                    slots.forEach(function(slot){ 
                    count++
                %>
                    <td class="cs_slot">
                        <% if(slot.avaliablity){  %>
                            <div class="free">
                        <%  }else{ %>
                            <div class="booked">
                        <% } %>
                            <p>slot number :<%= slot.slotnumber %></p>
                            <% if(slot.slotCapacity==1){  %>
                                <i class="fas fa-motorcycle"></i>
                                <p>Size:Two wheeler</p>
                            <% }else if(slot.slotCapacity==3) { %>
                                <i class="fas fa-car-side"></i>
                                <p>Size:4+ seeter car</p>
                            <% }else { %>
                                <i class="fas fa-car"></i>
                                <p>Size:4 seeter car</p>
                            <%  } %>
                        <% if(slot.avaliablity){  %>
                            <p>Free slot</p>
                            <a class="btn btn-info" href="/bookslot/<%= slot.id %>">Book slot</a>
                        <%  }else{ %>
                            <p>Booked slot</p>
                        <% } %>
                        </div>
                    </td>  
                    <% if(count==5){  count=0 %>     </tr><tr>      <% } %>
                    <% }) %>
                </tr>
                </tbody>
            </table>
        </div>
    <%- include("../partials/footer") -%>
